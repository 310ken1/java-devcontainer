// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
	"name": "Java",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/java:1-21-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "none",
			"installMaven": "false",
			"installGradle": "true"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"usernamehw.errorlens",
				"streetsidesoftware.code-spell-checker",
				"hediet.vscode-drawio",
				"VisualStudioExptTeam.vscodeintellicode",
				"VisualStudioExptTeam.intellicode-api-usage-examples",
				"VisualStudioExptTeam.vscodeintellicode-completions",
				"shd101wyy.markdown-preview-enhanced",
				"vscjava.vscode-java-test",
				"vscjava.vscode-java-dependency",
				"vscjava.vscode-maven",
				"redhat.java",
				"vscjava.vscode-java-pack",
				"vscjava.vscode-gradle",
				"vscjava.vscode-java-debug"
			],
			"settings": {
				// 自動保存
				"files.autoSave": "afterDelay",
				// フォーマッタ設定
				"editor.formatOnSave": true,
				"eslint.format.enable": true,
				"[java]": {
					"editor.defaultFormatter": "redhat.java"
				},
				// Markdown Preview Enhanced設定
				"markdown-preview-enhanced.plantumlJarPath": "/home/vscode/plantuml.jar"
			}
		}
	},
	"onCreateCommand": "sudo apt -y update && sudo apt install -y graphviz fonts-ipafont && curl -LsSf https://github.com/plantuml/plantuml/releases/download/v1.2025.2/plantuml-1.2025.2.jar -o /home/vscode/plantuml.jar"
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	//"postCreateCommand": "curl -LsSf https://github.com/plantuml/plantuml/releases/download/v1.2024.7/plantuml-1.2024.7.jar -o /home/vscode/plantuml.jar"
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}